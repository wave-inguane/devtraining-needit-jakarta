<record_update table="sys_script_fix">
    <sys_script_fix action="INSERT_OR_UPDATE">
        <active>true</active>
        <before>false</before>
        <description>brings review dates that are greater than 6 months down to just 6 months out</description>
        <flush_cache>false</flush_cache>
        <name>KB Articles fix review date</name>
        <run_once>true</run_once>
        <script><![CDATA[fixRevDate();
function fixRevDate()
{
	var gr = new GlideRecord('kb_knowledge');
	var d = gs.monthsAgo(-6);
	gr.addQuery('u_review_date', '>', d);
	gr.query();
	var msg = "";
	while(gr.next())
	{
		msg += gr.number.toString() + '\n';
		gr.u_review_date = d;
		gr.update();
	}
	
	gs.log(msg);
}]]></script>
